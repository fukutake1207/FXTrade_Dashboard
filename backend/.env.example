# FX Trading Dashboard - Environment Variables Template
# このファイルを .env にコピーして、実際の値を設定してください
# コマンド: cp .env.example .env

# =============================================================================
# AI API Keys (必須: 使用するプロバイダーのキーが必要)
# =============================================================================

# Gemini API Key (Google AI Studio から取得)
# https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Claude API Key (Anthropic から取得)
# https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# =============================================================================
# Application Settings
# =============================================================================

# 使用するナラティブプロバイダー (gemini または claude)
NARRATIVE_PROVIDER=gemini

# 環境設定 (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# Database Settings
# =============================================================================

# Database URL (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./fx_dashboard.db

# SQLログ出力 (true/false) - 本番環境では false 推奨
DB_ECHO=false

# =============================================================================
# MT5 Settings
# =============================================================================

# MT5 取引シンボル
MT5_SYMBOL=USDJPY

# MT5 接続タイムアウト (秒)
MT5_CONNECTION_TIMEOUT=30.0

# MT5 操作タイムアウト (秒)
MT5_OPERATION_TIMEOUT=10.0

# =============================================================================
# Data Collection
# =============================================================================

# データ収集間隔 (分)
DATA_COLLECTION_INTERVAL_MINUTES=10

# =============================================================================
# CORS Settings
# =============================================================================

# 許可するオリジン (カンマ区切り または JSON配列形式)
# カンマ区切り: CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com
# JSON形式: CORS_ORIGINS='["http://localhost:5173","http://localhost:3000"]'
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# =============================================================================
# Logging
# =============================================================================

# ログレベル (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ログファイル名
LOG_FILE=app.log

# ログファイル最大サイズ (バイト)
LOG_MAX_BYTES=10485760

# ログバックアップ数
LOG_BACKUP_COUNT=5
